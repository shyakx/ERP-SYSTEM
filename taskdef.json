{
  "family": "dicel-erp-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::337909745823:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::337909745823:role/dicel-erp-task-role",
  "containerDefinitions": [
    {
      "name": "dicel-erp-backend",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "8080"
        },
        {
          "name": "CORS_ORIGIN",
          "value": "https://d2iq65q7bkruv1.cloudfront.net"
        },
        {
          "name": "MAX_FILE_SIZE",
          "value": "10485760"
        },
        {
          "name": "UPLOAD_PATH",
          "value": "./uploads/documents"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:337909745823:secret:dicel-erp/db-host"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:337909745823:secret:dicel-erp/db-port"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:337909745823:secret:dicel-erp/db-user"
        },
        {
          "name": "DB_PASS",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:337909745823:secret:dicel-erp/db-pass"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:337909745823:secret:dicel-erp/db-name"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:337909745823:secret:dicel-erp/jwt-secret"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:337909745823:secret:dicel-erp/openai-api-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/dicel-erp-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
} 